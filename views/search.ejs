<body>
  <%- include('partials/_header') %>

  <main class="search-container">
    <form action="/api/search" method="post" id="search_form" class="new-listing-form">
      <div class="row flex-wrap">
        <div class="form-group col-sm-4 col-md-3 search-wrapper">
          <label for="title">Title</label>
          <input id='title' type="text" name="title" class="form-control" aria-describedby="emailHelp">
        </div>
        <div class="form-group col-sm-4 col-md-3 search-wrapper">
          <label for="asking-price">Minimum Price</label>
          <input id="asking-price" type="text" name="asking-price" class="form-control">
        </div>
        <div class="form-group col-sm-4 col-md-3 search-wrapper">
            <label for="max-price">Maximum Price</label>
            <input id="max-price" type="text" name="max-price" class="form-control">
          </div>
      </div>
      <button id="search_button" type="submit" class="btn btn-primary" >Search</button>
    </form>
  </main>


  <section class="appending_listings_search_container">

  </section>
