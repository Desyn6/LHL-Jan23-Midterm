<body>
  <%- include('partials/_header') %>
  <main class="mailbox-container">

    <form action="" method="post" class="response-box">
      <div class="">
        <label for="message">Message</label>
        <input type="text" name="message" placeholder="Type your response here">
      </div>
      
      <div class="mailbox-wrapper">
        <label for="email">email</label>
        <input placeholder="user@example.com" name="email" type="email"></input>
      </div>


      <div>
        <!-- this button will submit the form data to the server it will be stored inside req.body.message -->
        <button type="send" >Submit</button>
      </div>
    </form>
  </main>
  <%- include('partials/_footer') %>
</body>

